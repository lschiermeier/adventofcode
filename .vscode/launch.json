    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch and Build Rust",
            "program": "${workspaceFolder}/${relativeFileDirname}/../../target/debug/${fileBasenameNoExtension}",
            "args": ["test"],
            "cwd": "${workspaceFolder}/${relativeFileDirname}/../..",
            "preLaunchTask": "cargo: build",
            "cargo": {
                "args": [
                    "build",
                    "--bin=${fileBasenameNoExtension}"
                ],
                "filter": {
                    "kind": "bin"
                },
                "cwd": "${workspaceFolder}/${relativeFileDirname}"
            },
            "env": {"RUST_LOG":"Debug"}
        }

    ]
}